.board{display: flex;flex-direction: column;background-color: #f6f6f6;}
.board_item{display: flex;flex:1;flex-direction: column; background-color: #fff;font-size: 25rpx;margin-bottom: 30rpx;padding: 20rpx;background-color: #fff;}
.board_item:nth-child(1){margin-top: 30rpx;}
.title{display: flex;flex: 1;}
.title image{width: 30rpx;height: 30rpx;}
.title text{margin-bottom: 15rpx;}

.content{width: 100%;height: 320rpx;}
.inner{ display: flex;flex-direction: row;}
.movie_item{display: flex;flex: 1;flex-direction: column;width: 180rpx;margin: 10rpx;}
.movie_item image{width: 100%;height: 250rpx;}
.movie_item text {text-align: center; font-size: 20rpx; padding-top: 10rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }