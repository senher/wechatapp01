/* 大图 */
.background {position: fixed; left: 0; top: 0; right: 0; bottom: 0; height: 100%; width: 100%; z-index: -1000; opacity: .1; }
.image{ margin: 30rpx auto; width: 600rpx;}
.image image{width: 100%;}
.title{display: block; font-size: 40rpx;font-weight: 500;text-align: center;}
.viewCon{ width: 600rpx; margin: 30rpx auto; font-size: 25rpx;}
.viewCon text{display: block;margin-top: 20rpx; text-align: center; }
.viewCon text:nth-child(1){font-size: 30rpx; color:#666;}
.genres{display: block; text-align: center;font-size:25rpx; padding-top: 10rpx; }
/* 导演 */
.directors{width: 100%;}
.directorsTitle{font-size:40rpx; font-weight: 500; margin-bottom: 20rpx;}
.directorsName{font-size: 30rpx;color: #666;}
.directors image{ display: block; width: 60%; margin: 0 auto;}
/* 主演 */
.castsBox text:nth-child(1){ display: block; font-size: 40rpx; font-weight: 500; margin-bottom: 20rpx; text-align: center;}
.casts{display: flex;justify-content: center;flex-direction: row; overflow: hidden; margin: 0 20rpx;}
.castsItem{margin: 10rpx;flex: 1; overflow: hidden;word-wrap: break-word;word-break: normal;}
.castsItem image{ display: block; width: 100%;}
.castsItem text{display: block; margin-top: 10rpx; width: 100%; text-align: center;font-size: 25rpx; color: #666;}
/* 影片简介 */
.movieSummary{ padding: 20rpx;font-size: 30rpx;  line-height: 1.5;}
.summaryTitle{color: #333;font-weight: 600;}
.summaryCon{color: #555;font-size: 28rpx;}

/* 图片 */
.slide{width: 100%;}
.slide swiper{height: 430rpx;}
.slide-image{width: 100%;height: 100%;}

/* 视频 */
.movieVideo{ position: relative; width: 85%; height: auto; margin: 20rpx auto;text-align: center;}
.movieVideo video{width: 100%;}
.videoTitle{ display: block; margin-bottom: 20rpx;font-size: 40rpx; font-weight: 500;}

/* 一些评论 */
.movieReviews{padding: 20rpx 30rpx;}
.reviewsTitle{font-size: 30rpx;margin-bottom: 30rpx; }
.reviewsInfo{display: flex;flex-direction: column; }
.authorAvatar{ display: flex; flex: 1; margin: 20rpx;}
.avatarImg{width: 80rpx;height: 80rpx; border-radius: 50%; overflow: hidden;}
.avatarImg image{width: 100%;height: 100%;} 
.authorTitle{flex: 1;font-size: 25rpx; line-height: 1.5; color: #333;padding-left: 20rpx;}
