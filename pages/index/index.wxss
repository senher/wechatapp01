.userinfo {display: flex;flex-direction: column;align-items: center;}

.userinfo-avatar {width: 128rpx;height: 128rpx;margin: 20rpx;border-radius: 50%;}

.userinfo-nickname {color: #aaa;}

.usermotto { margin-top: 200px;}
.slide swiper{height: 400rpx;}
.slide-image{width: 100%;height: 100%;}

.board{display: flex;flex-direction: column; padding: 30rpx; }
/* 鼠标设置cursor: pointer; 可以点击高亮 */
.board-item{ -webkit-tap-highlight-color:rgba(119,136,153,.5); cursor: pointer; display: flex; flex: 1;  margin-top: 20rpx; padding: 30rpx; background-color: #eee; border: 1rpx solid #ccc;}
.board-item text{flex: 1;}
.board-item image{width: 40rpx;height: 40rpx;}